				<GridButton Hidden="1" Anchor="L,B" Offset="0,5" ID="ReplayGame" Style="MainButton" Size="300,41" FontStyle="Stroke" ColorSet="ButtonCS" String="LOC_GAMESUMMARY_LOADCONFIGURATION" ToolTip="Not yet implemented" />
			</Container>
		</Container>
		
